<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <p class="lead">Kamper</p>
            <div class="list-group">
                <li class="list-group-item active">Info1</li>
                <li class="list-group-item">Info2</li>
                <li class="list-group-item">Info3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-fluid" src="<%= campground.image %>" alt="">

                <div class="caption-full">

                    <h4 class="float-right">$9.00/night</h4>

                    <h4><a href="#"><%= campground.name %></a></h4>
                    <p><%= campground.description %></p>
                    <p>
                        <em>Submitted by: <%= campground.createdBy.username %></em>
                    </p>
                    <a class="btn btn-warning" href="/campgrounds/<%=campground._id%>/edit">Edit Campground</a>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new ">Add New Comment</a>

                </div>
                <br>
                <% campground.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author.username %></strong>
                        <span class="float-right">10 days ago</span>
                        <p><%= comment.text %></p>
                        <%})%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>


